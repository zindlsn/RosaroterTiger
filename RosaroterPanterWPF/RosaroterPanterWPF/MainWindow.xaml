<Window x:Class="RosaroterPanterWPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RosaroterPanterWPF"
        mc:Ignorable="d"
        xmlns:vm="clr-namespace:RosaroterPanterWPF"
        Title="{Binding Title}" Height="720" Width="1280">
	<Window.DataContext>
		<vm:MainViewModel x:Name="model" />
	</Window.DataContext>
	<Grid>
		<Label Content="Test text" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Center" Width="497" HorizontalContentAlignment="Center"/>
		<Button HorizontalAlignment="Left" VerticalAlignment="Top" Width="30" Margin="10,10,0,0" RenderTransformOrigin="-0.082,0.52" Height="30" Background="#FF7C98F9" BorderBrush="White"/>


        <Button Content="StartTimer" Command="{Binding StartTimerCommand}" IsEnabled="True" />
        <Label Content="{Binding TimerSeconds}" />

    </Grid>
</Window>
