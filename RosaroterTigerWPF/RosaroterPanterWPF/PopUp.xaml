<Window x:Class="RosaroterTigerWPF.PopUp"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RosaroterTigerWPF"
        mc:Ignorable="d"
        Title="PopUp" Height="275" Width="300">
    <StackPanel>
        <StackPanel HorizontalAlignment="Left" Height="200" VerticalAlignment="Top" Width="300">
            <Label Content="Please enter a comment about your day:" FontFamily="Berlin Sans FB"/>
            <TextBox Height="174" TextWrapping="Wrap" Margin="10,0,20,0"/>
        </StackPanel>
        <Label Content="Submit" Margin="50,5,50,0" MouseUp="Submit" HorizontalContentAlignment="Center" BorderBrush="Black" ClipToBounds="True" BorderThickness="1"/>
    </StackPanel>

</Window>
